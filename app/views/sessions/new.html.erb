<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 col-xs-offset-1 col-xs-10 users-new-container">
        <h1 class="text-center text-white">ログイン</h1>
        
        <%= form_for :session, url: login_path do |f| %>
        
          <div class="form-group">
            <%= f.label :email, 'メールアドレス', class: "text-white" %>
            <%= f.text_field :email, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :password, 'パスワード', class: "text-white" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          
          <%= f.submit "ログイン", class: "btn-block btn-white" %>
        <% end %>
        
        <br>
        <%= link_to '新規ユーザ登録はこちら', users_new_path, class: 'text-white' %>
      </div>
    </div>
  </div>
</div>
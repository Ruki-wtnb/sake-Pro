
   <%= render partial: 'sakeData', locals: {{jsake: @jsake}} %>
     
   <div class="col-md-4">
    <%= form_for @comment do |f| %> <!---コメントの入力フォーム--->
     <div class="form-group">
      <%= f.hidden_field :jsake_id, value: @comment.jsake_id %>
     </div>
     <div class="form-group">
      <%= f.text_area :body, class: 'form-control'%>
     </div>
     <div class="form-group">
      <%= f.hidden_field :back_url, value: request.referer %>
     </div>
     <%= f.submit "コメントを修正する", class: 'btn btn-success btn-sm', data:{confirm: "コメントを修正します、よろしいですか？"} %>
     <% end%>
   </div>
  
  </div>
 </div>

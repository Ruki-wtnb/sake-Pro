<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 col-xs-offset-1 col-xs-10 users-new-container">
        <h1 class="text-center text-white">新規登録</h1>
        <!--Userオブジェクトを渡して対応付ける-->
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :name, "氏名", class: 'text-white' %>
            <%= f.text_field :name, :placeholder => "15文字以内で入力してください", class: 'form-control'%>
          </div>
          
          <div class="form-group">
            <%= f.label :email, "メールアドレス", class: 'text-white' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :gender_id, "性別", class: 'text-white' %><br>
            <%= f.select :gender_id, [["男性", 1], ["女性", 2]], {}, {class: 'form-control'} %>
          </div>

          <div class="form-group form-inline">
            <%= f.label :birthday, "生年月日", class: 'text-white' %><br>
            <%= f.date_select :birthday, {use_month_numbers: true, start_year: 1950, end_year: (Time.now.year - 20), default: Date.new(1900, 1, 1) }, {class: 'form-control date-select'} %>
          </div>

          <div class="form-group">
            <%= f.label :password, "パスワード",class: 'text-white' %>
            <%= f.password_field :password, :placeholder => "文字数字交じり,8字以上32文字以下",class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :password_confirmation, "パスワード確認用", class: 'text-white' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
          <!--submitからPOSTメソッドを呼び出す-->
          <%= f.submit "登録", class: 'btn-block btn-white' %>
        <% end %>
        
        <br>
        <%= link_to 'ログインはこちら', login_path, class: 'text-white' %>
      </div>
    </div>
  </div>
</div>